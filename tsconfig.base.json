{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "esnext",
    "noEmit": true,
    "lib": ["ESNext", "dom", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "paths": {
      "@nmit-coursition/ai": ["libs/ai/src/index.ts"],
      "@nmit-coursition/api/auth": ["libs/api/auth/src/index.ts"],
      "@nmit-coursition/api/dev": ["libs/api/dev/src/index.ts"],
      "@nmit-coursition/api/utils": ["libs/api/utils/src/index.ts"],
      "@nmit-coursition/api/v1": ["libs/api/v1/src/index.ts"],
      "@nmit-coursition/auth": ["libs/auth/src/index.ts"],
      "@nmit-coursition/db": ["libs/db/src/index.ts"],
      "@nmit-coursition/email": ["libs/email/src/index.ts"],
      "@nmit-coursition/env": ["libs/env/src/index.ts"],
      "@nmit-coursition/order": ["libs/order/src/index.ts"],
      "@nmit-coursition/ui/design-system": ["libs/ui/design-system/src/index.ts"],
      "@nmit-coursition/ui/primitives": ["libs/ui/primitives/src/index.ts"],
      "@nmit-coursition/ui/primitives/*": ["libs/ui/primitives/src/*"],
      "@nmit-coursition/ui/utils": ["libs/ui/utils/src/index.ts"],
      "@nmit-coursition/ui/utils/*": ["libs/ui/utils/src/*"],
      "@nmit-coursition/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
